
   
<div class="row" style="width: 100%; height: 100%;">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form class="myform" action="/login" method="POST" name="myForm" class="needs-validation">
            {{#if loginErr}}
            <p class="error" >{{loginErr}}</p>
            {{/if}}
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter email" required>
                    
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password" required>
                </div>
                


                
                <a href="/signup" class="text-muted">Create new account ?</a>
                <button type="submit" class="btn btn-success float-right" style="border-radius: 10px;">Login</button>
            </form>
        </div>
    </div>
</div>

<style>
    .myform{
        background:rgb(189, 226, 235);
        padding: 30px;
        border-radius: 10px;
        border-color: red;
    }

    .row{
        width: 100%;
        height: 100%;
       
        background-position:top ; 
        background-repeat: no-repeat;
        background-size:cover ;

   
    }
</style>
