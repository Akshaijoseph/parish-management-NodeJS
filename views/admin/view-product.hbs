<section style="background-color: rgb(144, 144, 212);">
    <div class="container">
        <div class="ROW mt-5">
            <a style="margin-left: 90%;border-radius: 20px;margin-top: 5px;" href="/admin/add-product" class="btn btn-success  "> Add product</a>
             <a style="border-radius: 20px;margin-top: 5px; " href="/admin/update-information" class="btn btn-success  "> Info Alert</a>
            <a style="margin-left: 30%;border-radius: 20px; " href="/admin/view-appointment" class="btn btn-success  "> Check Appointments</a>
            

        </div>
     
        <table class="table mt-5" id="productstable">
  <thead>
    <tr style="background-color: rgb(195, 195, 221);">
      <th scope="col"></th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">Discription</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row"></th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Discription}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('do you want to delete product?{{this.name}}')">Delete</a>
        
      </td>
    </tr>   
    {{/each}}
    
  </tbody>
</table>

    </div>
</section>

<script>
  $(function () {
    $('#productstable').DataTable();
  });
</script>